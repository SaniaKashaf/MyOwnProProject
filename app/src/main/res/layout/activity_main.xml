        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/splashanimation"
        app:lottie_speed="1" />-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/aksk"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/aksk"
            app:cardCornerRadius="113dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >


            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:lottie_autoPlay="true"

                app:lottie_loop="true"
                app:lottie_rawRes="@raw/grocery"
                app:lottie_speed="1" />

            <androidx.cardview.widget.CardView
                android:layout_width="192dp"
                android:layout_height="69dp"

                android:layout_gravity="center"
                android:layout_marginTop="190dp"
                app:cardBackgroundColor="#FFEB3B">

                <Button
                    android:id="@+id/getstart"
                    android:layout_width="187dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:drawableEnd="@drawable/ic_arrow_icon"
                    android:fontFamily="@font/ubuntu_bold"
                    android:text="Get Started"
android:backgroundTint="@color/white"
                    android:textColor="#FFEB3B"
                    android:textSize="24sp" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="GROCERY APP"

android:layout_marginTop="60dp"
                android:fontFamily="@font/product_sans_bold"
                android:gravity="center"
                android:textColor="#FFEB3B"
                android:textSize="45sp" />

            <View
                android:layout_width="295dp"
                android:layout_height="5dp"
                android:layout_gravity="center_horizontal"
                android:background="#FFEB3B"
                android:layout_marginTop="110dp"

                />


        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>