<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin">

    <View
        android:layout_width="441dp"
        android:layout_height="58dp"
        android:background="@drawable/stokee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/adminimage"
        android:layout_width="222dp"
        android:layout_height="167dp"
        android:layout_marginTop="28dp"

        android:background="@drawable/fool"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/admin_p_name"
        android:layout_width="291dp"
        android:layout_height="67dp"
        android:layout_marginTop="216dp"
        android:background="@drawable/stokee"
        android:fontFamily="@font/ubuntu_bold"
        android:hint="Product Name"

        android:paddingLeft="7dp"
        android:textColorHint="@color/black"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/admin_p_quantity"
        android:layout_width="291dp"
        android:layout_height="67dp"
        android:layout_marginTop="292dp"
        android:background="@drawable/stokee"
        android:fontFamily="@font/ubuntu_bold"

        android:hint="Product Quantity"
        android:paddingLeft="7dp"
        android:textColorHint="@color/black"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/admin_p_price"
        android:layout_width="291dp"
        android:layout_height="67dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/stokee"
        android:fontFamily="@font/ubuntu_bold"

        android:hint="Price"
        android:paddingLeft="7dp"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/cardView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="192dp"

        android:layout_height="69dp"
        android:layout_gravity="center"
        android:layout_marginBottom="144dp"
        app:cardBackgroundColor="#FFEB3B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/admin_p_send"
            android:layout_width="187dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:drawableEnd="@drawable/ic_arrow_icon"
            android:fontFamily="@font/ubuntu_bold"
            android:text="Send"
            android:textColor="#FFEB3B"
            android:textSize="27sp" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>